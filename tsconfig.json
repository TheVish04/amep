{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@amep/shared/*": [
                "shared/*"
            ],
            "@amep/shared": [
                "shared/index.ts"
            ]
        }
    },
    "include": [
        "shared/**/*",
        "server/**/*",
        "apps/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/node_modules"
    ]
}